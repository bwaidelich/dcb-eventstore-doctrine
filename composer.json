{
  "name": "wwwision/dcb-eventstore-doctrine",
  "description": "Doctrine DBAL adapter for the Dynamic Consistency Boundary implementation",
  "type": "package",
  "license": "MIT",
  "authors": [
    {
      "name": "Bastian Waidelich",
      "email": "b.waidelich@wwwision.de"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/bwaidelich"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/bwaidelich"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ramsey/uuid": "^4.7",
    "psr/clock": "^1",
    "webmozart/assert": "^1.11",
    "doctrine/dbal": "^3.6",
    "wwwision/dcb-eventstore": "^4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^2",
    "squizlabs/php_codesniffer": "^4.0.x-dev",
    "phpunit/phpunit": "^11",
    "brianium/paratest": "^7"
  },
  "autoload": {
    "psr-4": {
      "Wwwision\\DCBEventStoreDoctrine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wwwision\\DCBEventStoreDoctrine\\Tests\\": "tests/",
      "Wwwision\\DCBEventStore\\Tests\\": "vendor/wwwision/dcb-eventstore/tests/"
    }
  },
  "scripts": {
    "test:phpstan": "phpstan",
    "test:cs": "phpcs --colors src",
    "test:cs:fix": "phpcbf --colors src",
    "test:integration": [
      "echo $DCB_TEST_DSN",
      "phpunit tests/Integration --exclude-group=parallel --exclude-group=feature_liveStream --exclude-group=feature_appendConditionWithoutMatchingEvent"
    ],
    "test:consistency": [
      "php scripts/consistency/prepare.php",
      "paratest tests/Integration --group=parallel --functional --processes 20",
      "vendor/bin/phpunit --colors --verbose --filter validateEvents tests/Integration/ConcurrencyTest.php",
      "php scripts/consistency/cleanup.php"
    ],
    "test": [
      "@test:phpstan",
      "@test:cs",
      "@test:integration",
      "@test:consistency"
    ]
  }
}
